    <form id="conversionForm" method="POST" action="/saveConverted" class="mt-3">
        <div class="container">
            <h1>Snack List üõí</h1>
            <div class="input-section">
                <input type="text" id="item" name="convertedText" placeholder="Add a grocery item">
                <button id="addButton" class="btn btn-primary">Add Item</button>
            </div>

            <!-- <ul id="groceryList"></ul> -->
        </div>
    </form>

    <div class="container mt-4">
        <ul class="list-group">
            <% for (var i=0; i < postData.length; i++) { %>
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    <form method="POST" action="/update/<%= postData[i]._id %>" class="d-flex flex-grow-1">
                        <input type="text" name="newPost" class="form-control me-2" value="<%= postData[i].post %>"
                            required>
                        <button type="submit" class="btn btn-warning me-2">Update</button>
                    </form>
                    <form method="POST" action="/delete/<%= postData[i]._id %>">
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                </li>
                <% } %>
        </ul>
    </div>
</body>

